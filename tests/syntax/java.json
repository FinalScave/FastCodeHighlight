{
  "name": "java",
  "fileExtensions": [".java"],
  "variables": {
    "identifierStart": "[\\p{Han}\\w_$]+",
    "identifierPart": "[\\p{Han}\\w_$0-9]*",
    "identifier": "${identifierStart}${identifierPart}"
  },
  "states": {
    "default": [
      {
        "pattern": "\\b(class|interface|enum|package|import)\\b",
        "style": "keyword"
      },
      {
        "pattern": "\\b(public|private|protected|default|static|final|abstract|synchronized|transient|native|volatile)\\b",
        "style": "keyword"
      },
      {
        "pattern": "\\b(extends|implements|new|this|super|try|catch|finally|throw|throws|switch|case|if|else|for|while|do)\\b",
        "style": "keyword"
      },
      {
        "pattern": "\"(?:[^\"\\\\]|\\\\.)*\"",
        "style": "string"
      },
      {
        "pattern": "(${identifier})\\(",
        "styles": [1, "method"]
      },
      {
        "pattern": "${identifier}",
        "style": "identifier"
      },
      {
        "pattern": "\\.|\\(|\\[|\\?|!|@|%|^|&|\\||\\+|-|\\*|/|<|>|=|,|\\)|]|{|}|;|:",
        "style": "punctuation"
      },
      {
        "pattern": "//.*",
        "style": "comment"
      },
      {
        "pattern": "/\\*",
        "style": "comment",
        "state": "longComment"
      },
      {
        "pattern": ".",
        "style": "text"
      }
    ],
    "longComment": [
      {
        "pattern": "\\s\\S",
        "style": "comment"
      },
      {
        "pattern": "\\*/",
        "style": "comment",
        "state": "default"
      }
    ]
  }
}